version: 1
formatters:
  console:
    class: 'nodepool.logconfig.MultiLineFormatter'
    format: '%(levelname)7s %(name)s: %(message)s'
handlers:
  console:
    class: logging.StreamHandler
    formatter: console
    level: DEBUG
    stream: ext://sys.stdout
loggers:
  nodepool:
    handlers:
      - console
    level: {{ nodepool_loglevel }}
    propagate: 0
root:
  handlers:
    - console
  level: {{ nodepool_root_loglevel }}
