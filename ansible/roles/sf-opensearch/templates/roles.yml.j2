_meta:
  type: "roles"
  config_version: 2
# Opensearch comes with pre-defined roles.
# https://opensearch.org/docs/latest/security-plugin/access-control/users-roles/#predefined-roles

# Opensearch comes with pre-defined actions groups (that are logical groups of permission)
# https://opensearch.org/docs/latest/security-plugin/access-control/default-action-groups/

# Opensearch permissions are
# https://opensearch.org/docs/latest/security-plugin/access-control/permissions/

# This roles is permissif but is only applied to users connected via Keycloak.
# KC add that role into the JWT 'roles' claim list.

sf_opensearch_dashboards_user:
  reserved: true
  cluster_permissions:
    - "cluster_composite_ops_ro"
  index_permissions:
    - index_patterns:
        - "*"
      allowed_actions:
        - "read"
        - "get"
        - "search"
        - "write"
  tenant_permissions:
    - tenant_patterns:
        - "*"
      allowed_actions:
        - "kibana_all_write"
